---
const { question, answer } = Astro.props;
---
<details class="faq-item hidden" aria-expanded="false">
    <summary class="faq-item-content">
        <span class="faq-item-number"></span>
        <div class="faq-item-label">{question}</div>
        <div class="faq-item-toggle">
            <span class="toggle-vertical"></span>
            <span class="toggle-horizontal"></span>
        </div>
    </summary>
    <div class="faq-item-text">{answer}</div>
</details>
<div class="faq-item-border"></div>

<style>
    /* mobiles */
    @media (max-width: 425px) {
        details.faq-item {
            --grid-width-number: 2rem !important;
            padding-left: 0 !important;
            padding-right: 0 !important;
            width: 100% !important;
        }

        details.faq-item .faq-item-text {
            max-width: 90% !important;
        }

        .faq-item-toggle {
            --size: 16px !important;
        }
    }

    /* tablets */
    @media (min-width: 426px) and (max-width: 768px) {
        details.faq-item .faq-item-text {
            max-width: 50vw;
        }

        .faq-item-content {
            grid-template-columns: 3rem 1fr auto;
        }
    }

    details.faq-item summary::-webkit-details-marker {
        display: none !important; /* hides the default 'arrow' for expanding */
    }

    details.faq-item,
    summary {
        cursor: pointer !important;
    }

    details.faq-item {
        --padding: 1.25rem;
        --grid-width-number: 5rem;

        counter-increment: faq-item;
        position: relative;
        width: calc(100% - var(--padding) * 2);

        cursor: pointer;

        padding: calc(var(--padding) * 1.15) var(--padding);
    }

    details.faq-item.hidden,
    details.faq-item.hidden + .faq-item-border,
    details.faq-item.hidden + .faq-item-border:before {
        display: none !important;
    }

    details.faq-item + .faq-item-border {
        z-index: 0;
        height: 1px;
        width: 100%;
        background: gray;
        opacity: 100%;
        transition: background-color 0.2s ease;
        transform-origin: left;
    }

    details.faq-item + .faq-item-border:before{
        z-index: 1;
        content: '';
        display: block;
        width: 100%;
        height: 100%;
        padding: 0;
        margin: 0;
        position: relative;
        background: var(--primary-gradient);
        transform: scaleX(0);
        transform-origin: left;
        transition: transform 0.75s ease;
    }

    details:not([open]).faq-item:hover + .faq-item-border {
        background: rgba(128, 128, 128, 0.7);
    }

    details[open].faq-item + .faq-item-border:before {
        transform: scaleX(1);
    }

    .faq-item-content {
        display: grid;
        grid-template-areas: 'faq-item-number faq-item-label faq-item-toggle';

        grid-template-columns: var(--grid-width-number) 1fr auto;
        grid-template-rows: auto;

        justify-self: stretch;

        width: 100%;
    }

    .faq-item-label {
        font-style: normal;
        line-height: 200%;

        grid-area: faq-item-label;

        word-break: break-word;
        white-space: normal;
        text-align: left;
    }

    .faq-item-number {
        grid-area: faq-item-number;
        text-wrap: nowrap;
        color: var(--secondary-color);
    }

    .faq-item-number:after {
        content: counter(faq-item, decimal-leading-zero);
    }

    .faq-item-text {
        margin-top: var(--padding);
        font-size: 0.88rem;
        max-width: 50%;
        line-height: 200%;
        font-weight: 200;
        margin-left: clamp( var(--grid-width-number), calc(3vw + 0.75rem), calc(80px + 0.75rem)); /* somehow works */
        letter-spacing: 0.04em;

        overflow: hidden;
        height: fit-content;
        transition: height 0.3s ease;
    }

    .faq-item-toggle {
        grid-area: faq-item-toggle;

        --size: 20px;
        height: var(--size);
        width: var(--size);
        min-height: var(--size);
        min-width: var(--size);
        margin-left: 1.5rem;

        display: flex;
        justify-content: center;
        align-items: center;
        align-self: start;

        border-radius: 50%;
        border: solid 1px transparent;
        background: linear-gradient(var(--background-color), var(--background-color)) padding-box, var(--primary-gradient) border-box;
    }

    .faq-item-toggle .toggle-vertical,
    .faq-item-toggle .toggle-horizontal {
        border-radius: 4px;
        background: var(--primary-gradient);
        width: 1px;
        height: calc(var(--size) * 0.34);
        transition: transform 0.4s ease;
    }

    .faq-item-toggle .toggle-horizontal{
        position: absolute;
        transform: rotate(90deg);
    }

    details[open].faq-item .faq-item-toggle .toggle-vertical {
        transform: rotate(90deg);
    }
</style>

<script>
    document.querySelectorAll('.faq-item').forEach(faqItem => {
        faqItem.addEventListener('click', function (e) {
            // Sprawdzenie, czy kliknięto poza div.faq-item-text
            if (!e.target.closest('.faq-item-text')) {
                // Zwijanie wszystkich elementów
                document.querySelectorAll('.faq-item').forEach(item => {
                    if (item !== faqItem) {
                        item.removeAttribute('open');
                        item.setAttribute('aria-expanded', 'false');
                    }
                });
            }
        });
    });

    // Accordion's open/close animation
    document.querySelectorAll('.faq-item').forEach((details) => {
        const faqItemText = details.querySelector('.faq-item-text');
        const summary = details.querySelector('summary');
        if (!faqItemText || !summary) return;

        details.addEventListener('click', (event) => {
            event.preventDefault(); // Block default behavior

            if (details.open) {
                // Closing animation
                faqItemText.style.height = `${faqItemText.scrollHeight}px`; // Set height to current height
                requestAnimationFrame(() => (faqItemText.style.height = '0px')); // Smoothly animate height
                faqItemText.addEventListener(
                    'transitionend', // After the transition ends...
                    () => {
                        details.open = false; // Close the <details>
                        faqItemText.style.height = ''; // Reset height after animation
                        details.setAttribute('aria-expanded', 'false'); // Set aria-expanded to false
                    },
                    { once: true } // Remove listener after animation
                );
            } else {
                // Opening animation
                details.open = true; // Open the <details>
                faqItemText.style.height = '0px'; // Set height to 0
                const startHeight = faqItemText.scrollHeight + 'px'; // Set target height
                requestAnimationFrame(() => (faqItemText.style.height = startHeight));
                faqItemText.addEventListener(
                    'transitionend', // After the transition ends...
                    () => {
                        faqItemText.style.height = ''; // Reset height after animation
                        details.setAttribute('aria-expanded', 'true'); // Set aria-expanded to true
                    },
                    { once: true } // Remove listener after animation
                );
            }
        });
    });
</script>